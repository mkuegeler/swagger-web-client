{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "./public/dist",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.js"
  ]
}